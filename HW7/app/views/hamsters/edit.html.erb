<!DOCTYPE html>

<h3>
	<%= "Edit #{@user.email}'s Hampter: #{@hamster.name}" %>
</h3>

<div>
	<%= form_for([@user, @hamster], method: :patch) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>
		<%= f.label :phrase %>
		<%= f.text_area :phrase %>
		<%= f.submit "Update Hammy" %>
	<% end %>
</div>